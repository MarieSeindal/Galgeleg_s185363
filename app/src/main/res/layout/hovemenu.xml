<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/indhold"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dip"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Galgeleg"
        android:textSize="80dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        />



    <Button
        android:id="@+id/spilKnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="Spil"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="Highscoreliste"
        android:textSize="20sp"/>

<!--https://lottiefiles.com/blog/working-with-lottie/getting-started-with-lottie-animations-in-android-app-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:padding="1dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/stickman"
        />


</TableLayout>
